{
  "name": "scholarflow",
  "version": "0.1.0",
  "private": true,
  "description": "Academic productivity and networking platform",
  "author": "ScholarFlow Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/shandley/scholarflow.git"
  },
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "build:test": "next build && echo 'Build successful!'",
    "build:analyze": "ANALYZE=true next build",
    "test": "npm run type-check && npm run lint && npm run format:check",
    "test:build": "npm run test && npm run build:test",
    "precommit": "lint-staged",
    "prepare": "husky"
  },
  "dependencies": {
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "^6.9.0",
    "@vercel/postgres": "^0.10.0",
    "next": "15.3.3",
    "next-auth": "^4.24.11",
    "prisma": "^6.9.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@next/bundle-analyzer": "^15.3.3",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.3.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.12",
    "typescript": "^5"
  }
}
