# Database
DATABASE_URL="postgresql://user:password@localhost:5432/scholarflow"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="generate-with-openssl-rand-base64-32"

# OAuth Providers
# ORCID (https://orcid.org/developer-tools)
ORCID_CLIENT_ID="APP-XXXXXXXXXXXXXXXXXX"
ORCID_CLIENT_SECRET="xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"

# GitHub OAuth (https://github.com/settings/developers)
GITHUB_CLIENT_ID="Iv1.xxxxxxxxxxxxxxxxx"
GITHUB_CLIENT_SECRET="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# Google OAuth (https://console.cloud.google.com/)
GOOGLE_CLIENT_ID="xxxxxxxxxxxxx-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="GOCSPX-xxxxxxxxxxxxxxxxxxxxxxxxxx"

# External API Keys
# Google Scholar API (via SerpAPI or similar)
GOOGLE_SCHOLAR_API_KEY="your-api-key"

# CrossRef API (https://www.crossref.org/services/metadata-delivery/)
CROSSREF_API_KEY="your-api-key"

# Vercel KV (Redis) - Auto-configured in Vercel
KV_URL="redis://default:xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx@xxxxxxxxxx.kv.vercel-storage.com:xxxxx"
KV_REST_API_URL="https://xxxxxxxxxx.kv.vercel-storage.com"
KV_REST_API_TOKEN="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
KV_REST_API_READ_ONLY_TOKEN="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# Vercel Blob Storage - Auto-configured in Vercel
BLOB_READ_WRITE_TOKEN="vercel_blob_rw_xxxxxxxxxxxxxxxxxxxxxxxxxx"

# Vercel Postgres - Auto-configured in Vercel
POSTGRES_URL="postgres://default:xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx@xxxxxxxxxx.postgres.vercel-storage.com:xxxx/verceldb"
POSTGRES_PRISMA_URL="postgres://default:xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx@xxxxxxxxxx.postgres.vercel-storage.com:xxxx/verceldb?pgbouncer=true&connect_timeout=15"
POSTGRES_URL_NON_POOLING="postgres://default:xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx@xxxxxxxxxx.postgres.vercel-storage.com:xxxx/verceldb"

# Email Configuration (for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-specific-password"
EMAIL_FROM="ScholarFlow <noreply@scholarflow.com>"

# Analytics (Optional)
VERCEL_ANALYTICS_ID="your-analytics-id"
PLAUSIBLE_DOMAIN="scholarflow.com"

# Sentry Error Tracking (Optional)
SENTRY_DSN="https://xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx@xxxxx.ingest.sentry.io/xxxxxxxxxxxxx"

# Feature Flags
ENABLE_TIER_2="true"
ENABLE_TIER_3="false"
ENABLE_AI_FEATURES="false"

# Development
NODE_ENV="development"